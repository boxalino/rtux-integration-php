<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Product/ Item definition of the search context used for the setup -->
        <service id="Boxalino\RealTimeUserExperienceApi\Service\Api\Request\Context\ItemContextInterface"
                 class="BoxalinoClientProject\BoxalinoIntegration\Framework\Request\ProductContext"
                 parent="boxalino.api.request.context.listing">
            <call method="setRequestDefinition">
                <argument type="service" id="Boxalino\RealTimeUserExperienceApi\Service\Api\Request\Definition\ItemRequestDefinitionInterface"/>
            </call>
            <call method="setWidget"><argument>related</argument></call>
             <call method="setGroupBy"><argument>id</argument></call>
             <call method="setHitCount"><argument>5</argument></call>
        </service>

        <!-- Content loader for search (used as a dependency in controller) (declared independently because the ApiPageLoader can be re-used for navigation and other contexts -->
        <service id="boxalino.integration.loader.item" class="BoxalinoClientProject\BoxalinoIntegration\Framework\Content\Page\ApiBaseLoader"
                 parent="boxalino.integration.content.page.base">
            <call method="setApiContext">
                <argument type="service" id="Boxalino\RealTimeUserExperienceApi\Service\Api\Request\Context\ItemContextInterface"/>
            </call>
        </service>

    </services>

</container>
